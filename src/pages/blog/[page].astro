---
import type { GetStaticPaths } from "astro";
import BlogItem from "@/components/blog/blogItem.astro";
import BlogLayout from "@/layouts/blogLayout.astro";
import {getCollection} from "astro:content";
export const getStaticPaths = (async ({paginate}) => {
    const posts = await getCollection('blog')
    const results = posts.map(post => ({
        ...post
    }));
    return paginate(results, {pageSize: 2})
}) satisfies GetStaticPaths;
const { page } = Astro.props;
---

<BlogLayout>
    <div class="py-10 mx-auto">
        <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
            Blog
        </h1>
    </div>

    <section class="bg-gray-900" aria-label="Entradas de blog">
        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
            {page.data.map((post) => <BlogItem post={post} />)}
        </div>
    </section>

    <section aria-label="Controles" class="flex justify-between mt-10">

        <!--   page .. ?? prev   -->
        <a
                href={page.url.prev}
                class:list={{
                    disabled: !page.url.prev,
                }}>Anteriores</a
        >

        <!--   page .. ?? next   -->
        <a
                href={page.url.next}
                class:list={{
                    disabled: !page.url.next,
                }}>Siguientes</a
        >
    </section>
</BlogLayout>

<style>
    @reference "tailwindcss";
    a {
        @apply bg-blue-500 text-white p-2 rounded hover:bg-blue-600 cursor-pointer;
    }

    .disabled {
        @apply bg-gray-600 hover:bg-gray-600;
    }
</style>